{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ],
      "enabled": true
    },
    "chrome-devtools": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "chrome-devtools-mcp@latest"
      ],
      "enabled": true
    },
    "cloudflare": {
      "type": "local",
      "command": [
        "npx",
        "mcp-remote",
        "https://observability.mcp.cloudflare.com/mcp"
      ],
      "enabled": true
    }
  }
}
