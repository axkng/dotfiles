# Aliases
alias ls="eza"
alias ll="eza -al"
alias cat="bat"
alias du="dust"
alias find="fd"
alias grep="rg"
alias vim="nvim"
alias gi="git init && cp ~/.config/.pre-commit-config.yaml . && pre-commit install && qlty init"
alias ca="chezmoi add"

# Set zsh theme
ZSH_THEME="catppuccin"
CATPPUCCIN_FLAVOR="mocha"

# Colors.
#unset LSCOLORS
#export CLICOLOR=1
#export CLICOLOR_FORCE=1

# Nicer prompt.
#export PS1=$'\n'"%F{green} %*%F %F{green}%3~ %F{white}"$'\n'"$ "

# Enable plugins.
plugins=(aws)

# Custom $PATH with extra locations.
export PATH=/opt/homebrew/bin:/usr/local/bin:/usr/local/sbin:$HOME/bin:/usr/local/share:$HOME/.krew/bin:$HOME/.local/bin:$HOME/.qlty/bin:$PATH

# Bash-style time output.
#export TIMEFMT=$'\nreal\t%*E\nuser\t%*U\nsys\t%*S'

# Tell homebrew to not autoupdate every single time I run it (just once a week).
export HOMEBREW_AUTO_UPDATE_SECS=604800

eval "$(starship init zsh)"
eval "$(mcfly init zsh)"

# bun completions
[ -s "/Users/dermock/.bun/_bun" ] && source "/Users/dermock/.bun/_bun"

# bun
export BUN_INSTALL="$HOME/.bun"
export PATH="$BUN_INSTALL/bin:$PATH"
