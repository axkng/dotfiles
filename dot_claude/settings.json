{
  "env": {
    "BASH_MAX_TIMEOUT_MS": "600000",
    "BASH_DEFAULT_TIMEOUT_MS": "600000"
  },
  "hooks": {
    "PreToolUse": [],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "qlty fmt --all && qlty check --all"
          }
        ]
      }
    ],
    "Stop": []
  }
}
